# Minecraft Server Environment Variables Example
# Copy this file to .env and customize as needed
# Note: Most settings are in docker-compose.yaml, but you can override them here

# Server Configuration
MINECRAFT_VERSION=1.20.6
SERVER_NAME="Youlz Server"
SERVER_PORT=20242
MOTD="Bienvenue sur le serveur des Youlz"

# Performance Settings
MEMORY=8G
VIEW_DISTANCE=32
MAX_TICK_TIME=-1

# Server Type & Difficulty
TYPE=FABRIC
DIFFICULTY=hard

# Autopause (saves resources when no players online)
ENABLE_AUTOPAUSE=TRUE

# Whitelist Configuration
ENABLE_WHITELIST=TRUE
OVERRIDE_WHITELIST=TRUE

# Custom World (optional)
# WORLD=/worlds/custom-world

# Server Icon (optional)
# ICON=https://example.com/server-icon.png

# Backup Configuration (for scripts/backup.sh)
BACKUP_DIR=./backups
RETENTION_DAYS=7

# Deployment Configuration (for scripts/deploy-modpack.sh)
# REMOTE_SERVER=user@server:/path/to/minecraft-server
